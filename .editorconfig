# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2

[*.{md,rst}]
indent_size = 2

[*.{htm,html,xml}]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
